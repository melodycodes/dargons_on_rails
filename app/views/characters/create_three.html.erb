<h1>Create a New Character!</h1>
<h2>Let's choose out your ability scores...</h2>
<div class="row">
  <div class="col-md-12">
    <%= bootstrap_form_for(@character, url: { action: 'create_three', id: @character.id}) do |f| %>
      <%= render 'shared/error_messages' %>
      <% ability_scores.each do |ability| %>
        <%= f.select ability.to_sym, options_for_select(8..18) %>
      <% end %>
      <%= f.primary "Create!" %>
    <% end %>
  </div>
</div>
